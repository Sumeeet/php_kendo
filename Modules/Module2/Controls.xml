<?xml version="1.0" encoding="UTF-8" ?>

<control name = 'module2'>
    <group id = 'container'>

        <!-- fathers age composite view-->
        <label id = 'fageLabelId' name = 'Fathers Age'></label>
        <numeric_input id = 'fageInputId' bind = 'fage.value'></numeric_input>

        <!-- sons age composite view-->
        <label id = 'sageLabelId' name = 'Sons Age'></label>
        <numeric_input id = 'sageInputId' bind = 'sage.value'></numeric_input>

        <!-- collection of buttons for footer view -->
        <group id = 'griToolBarId' class = 'horizontal_layout'>
            <button id = 'addRowId' name = '+ Row' bind = '' action = 'addRow'></button>
            <button id = 'removeRowId' name = '- Row' bind = '' action = 'removeRow'></button>
            <button id = 'addBeforeRowId' name = '+= Row' bind = '' action = 'addBeforeRow'></button>
            <button id = 'addAfterRowId' name = '=+ Row' bind = '' action = 'addAfterRow'></button>
        </group>

        <!-- father and son age grid-->
        <grid id = 'ageGridId' bind = 'ageGrid.value' row_ops = 'add|remove|dragdrop'></grid>

        <!-- collection of buttons for footer view -->
        <block id = 'footerId' class = 'horizontal_layout'>
            <button id = 'loadId' name = 'Load' bind = '' action = 'onLoad'></button>
            <button id = 'cacheId' name = 'Clear Cache' bind = '' action = 'onClear'></button>
            <button id = 'applyId' name = 'Apply' bind = 'changed' action = 'onApply'></button>
        </block>
    </group>
</control>

