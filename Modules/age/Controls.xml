<?xml version="1.0" encoding="UTF-8" ?>

<control name = 'Age'>
    <group id = 'container'>

        <block id = 'footerId' class = 'horizontal_layout'>
            <block>
            <!-- fathers age composite view-->
                <label id = 'fageLabelId' name = 'Fathers Age' class = 'block'/>
                <numeric_input id = 'fageInputId' bind = 'fage.value'/>
            </block>

            <block>
                <!-- sons age composite view-->
                <label id = 'sageLabelId' name = 'Sons Age' class = 'block'/>
                <numeric_input id = 'sageInputId' bind = 'sage.value'/>
            </block>
        </block>

        <!--  Grid and its operations -->
        <group class = 'vertical_layout'>
            <block id = 'footerId' class = 'horizontal_layout'>
                <button id = 'addRowId' class = 'ct-toolbar' name = '+' action = 'addRow'/>
                <button id = 'removeRowId'  class = 'ct-toolbar' name = '-' action = 'removeRow'/>
            </block>

            <grid id = 'ageGridId' bind = 'ageGrid.value' editable = 'true' width = '600px' height = '400px'>
                <columns>
                    <column field = 'checked' title = 'Select' width = '200px' type = 'boolean'/>
                    <column field = 'fage' title = 'Fathers Age' width = '200px'/>
                    <column field = 'sage' title = 'Sons Age' width = '200px'/>
                </columns>
            </grid>
        </group>

        <!-- collection of buttons for footer view -->
        <block id = 'footerId' class = 'horizontal_layout'>
            <button id = 'loadId' class = 'ct-toolbar' name = 'Load' action = 'onLoad'/>
            <button id = 'cacheId'  class = 'ct-toolbar' name = 'Clear Cache' action = 'onClear'/>
            <button id = 'applyId' class = 'ct-toolbar' name = 'Apply' action = 'onApply'/>
        </block>
    </group>
</control>

