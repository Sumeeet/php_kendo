<?xml version="1.0" encoding="UTF-8" ?>

<control name = 'Age'>
    <group id = 'container'>

        <group id = 'ageGroup' class = 'horizontal_layout'>
            <group>
            <!-- fathers age composite view-->
                <label id = 'fageLabelId' name = 'Fathers Age' class = 'block'/>
                <numeric_input id = 'fageInputId' bind = 'fage.value'/>
            </group>

            <group>
                <!-- sons age composite view-->
                <label id = 'sageLabelId' name = 'Sons Age' class = 'block'/>
                <numeric_input id = 'sageInputId' bind = 'sage.value'/>
            </group>
        </group>

        <!--  Grid and its operations -->
        <group class = 'vertical_layout'>
<!--            <toolbar id = 'tooBarId' actions = '+:addRow | -:removeRow | ?:help' width = '650px' />-->
            <grid id = 'ageGridId' bind = 'ageGrid.value' editable = 'true' width = '650px' height = '350px'
                  actions = '+:addRow | -:removeRow | undo:undo | redo:redo | ?:help'>
                <columns>
                    <column field = 'checked' title = 'Select' width = '200px' type = 'boolean'/>
                    <column field = 'fage' title = 'Fathers Age' width = '200px'/>
                    <column field = 'sage' title = 'Sons Age' width = '200px'/>
                </columns>
            </grid>
        </group>

        <!-- collection of buttons for footer view -->
        <group id = 'footerId' class = 'horizontal_layout'>
            <button id = 'loadId' class = 'ct-toolbar' name = 'Load'/>
            <button id = 'cacheId'  class = 'ct-toolbar' name = 'Clear Cache'/>
            <button id = 'applyId' class = 'ct-toolbar' name = 'Apply'/>
        </group>
    </group>
</control>

